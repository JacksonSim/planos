    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Django Reload",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}\\manage.py",
            "args": [
                "runserver",
            ],
            "django": true,
            "justMyCode": true,
            "preLaunchTask": "MakeMigrations",
            "postDebugTask": "Migrate",
        },
        {
            "name": "Python: Django NoReload",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}\\manage.py",
            "args": [
                "runserver",
                "--noreload"
            ],
            "django": true,
            "justMyCode": true,
            "preLaunchTask": "MakeMigrations",
            "postDebugTask": "Migrate",
        }
    ]
}